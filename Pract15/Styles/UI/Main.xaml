<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style TargetType="Window" x:Key="ALL">
        <Setter Property="Background" Value="{StaticResource MainBackgroung}"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="{StaticResource MainAccent}"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="70"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AddAccent}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Button" x:Key="AdminBut" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Foreground" Value="{DynamicResource AddAccent}"/>
    </Style>

    <Style TargetType="Button" x:Key="CRUD" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="{StaticResource MainAccent}"/>
        <Setter Property="Width" Value="215"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                Background="{TemplateBinding Background}"
                Padding="{TemplateBinding Padding}"
                CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AddAccent}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource AddAccent}"/>
        <Setter Property="FontSize" Value="25"/>
    </Style>



    <Style TargetType="TextBox" x:Key="Main" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource MainAccent}"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="TextBox" x:Key="Sub" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="{StaticResource MainAccent}"/>
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style TargetType="ComboBox" x:Key="MainComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="70"/>
    </Style>

    <Style TargetType="ComboBox" x:Key="SubComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="40"/>
    </Style>

    <Style TargetType="TextBlock"  x:Key="MAIN">
        <Setter Property="Foreground" Value="{DynamicResource AddAccent}"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="WHITE">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="Title" BasedOn="{StaticResource MAIN}">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="WrapPanel">
        <Setter Property="Background" Value="{StaticResource AddAccent}"/>
    </Style>


    <Style TargetType="Grid" x:Key="backGrid">
        <Setter Property="Background" Value="{StaticResource AddAccent}"/>
    </Style>

    <Style TargetType="Border" x:Key="Stock">
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="4"/>
    </Style>
</ResourceDictionary>