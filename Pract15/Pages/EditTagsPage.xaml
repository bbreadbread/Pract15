<Page x:Class="Pract15.Pages.EditTagsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract15.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditTagsPage"  DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Click="back"  Style="{StaticResource AdminBut}" Content="&lt; К админской панели"/>

        <ListView Grid.Row="1"
              Grid.RowSpan="2"
             ItemsSource="{Binding tagsService.Items}"
             MouseDoubleClick="add_group_user"
             SelectedItem="{Binding tag}" Width="400"
             Style="{StaticResource TagsWork}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="Общий тег: "/>
                        <Run Text="{Binding Name}" FontWeight="Bold"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.RowSpan="2"
              Grid.Row="1"
              Grid.Column="1"
             ItemsSource="{Binding productTagsService.ProductTags}"
             MouseDoubleClick="remove_group_user"
             SelectedItem="{Binding productTag}" Width="400"
             Style="{StaticResource TagsWork}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical">
                            <TextBlock>
                                <Run Text="Тег принадлежности: "/>
                                <Run Text="{Binding Tag.Name}" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
